#include "test_header.test"

FILE	*ob;
int		stdout_backup;

FILE	*ob_start()
{
	//dup is used to copy stdout fd
	stdout_backup = dup(1);
	//fopen positions stream to write to temp
	ob = fopen("temp", "w");
	if (!ob)
	{
		printf("Creating temp file for output failed\n");
		exit(EXIT_FAILURE);
	}
	//dup2 is used to replace stdout with the stream to temp
	dup2(fileno(ob), 1);
	return (ob);
}

